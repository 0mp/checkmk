#!/usr/bin/python
# encoding: utf-8

import os
import sys
import tempfile
import pylint_cmk

pylint_cmk.ensure_equal_branches()
base_path = pylint_cmk.get_test_dir()

f = file(base_path + "/cmk-modules.py", "w")
for path in pylint_cmk.ordered_module_files():
    pylint_cmk.add_file(f, path)
f.close()

sys.exit(pylint_cmk.run_pylint(base_path, cleanup_test_dir=True))
