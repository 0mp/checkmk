# targetstate is 1 (up)

ifoperstatus_monitor_unused = False

def inventory_ifoperstatus(checkname, info):
    inventory = []
    for name, operstatus in info:
        if ifoperstatus_monitor_unused or operstatus == 'up':
            inventory.append( (name, operstatus, repr(operstatus)) )
    return inventory


def check_ifoperstatus(item, targetstate, info):
   for name, operstatus in info:
       if item == name:
           if operstatus == targetstate:
               return (0, "OK - status is %s" % operstatus)
           elif operstatus == "up":
               return (1, "WARN - port used, but should not be")
           else:
               return (2, "CRIT - status is %s" % operstatus)
                    
   return (3, "UNKNOWN - interface %s missing" % item)

check_info['ifoperstatus'] = (check_ifoperstatus, "Interface %s", 0,  inventory_ifoperstatus)
snmp_info['ifoperstatus'] = ( ".1.3.6.1.2.1.2.2.1", [ 2, 8 ] )
