# .1.3.6.1.4.1.2.6.182.3.6.2.1.2.1 3 --> SML-MIB::mediaAccessDeviceObjectType.1
# .1.3.6.1.4.1.2.6.182.3.6.2.1.2.2 3 --> SML-MIB::mediaAccessDeviceObjectType.2
# .1.3.6.1.4.1.2.6.182.3.6.2.1.3.1 IBM     ULT3580-TD6     00078B5F0F --> SML-MIB::mediaAccessDevice-Name.1
# .1.3.6.1.4.1.2.6.182.3.6.2.1.3.2 IBM     ULT3580-TD6     00078B5FCF --> SML-MIB::mediaAccessDevice-Name.2
# .1.3.6.1.4.1.2.6.182.3.6.2.1.5.1 2 --> SML-MIB::mediaAccessDevice-Availability.1
# .1.3.6.1.4.1.2.6.182.3.6.2.1.5.2 2 --> SML-MIB::mediaAccessDevice-Availability.2
# .1.3.6.1.4.1.2.6.182.3.6.2.1.5.12 2 --> SML-MIB::mediaAccessDevice-Availability.12
# .1.3.6.1.4.1.2.6.182.3.6.2.1.6.1 2 --> SML-MIB::mediaAccessDevice-NeedsCleaning.1
# .1.3.6.1.4.1.2.6.182.3.6.2.1.6.2 2 --> SML-MIB::mediaAccessDevice-NeedsCleaning.2


def inventory_ibm_tl_media_access_devices(info):
    inventory = []
    for ty, name, avail, clean in info:
        inventory.append((ibm_tape_library_parse_device_name(name), None))
    return inventory


def check_ibm_tl_media_access_devices(item, params, info):
    # check states suggested by customer
    mappings = {
        "type" : {
            "0" : "unknown",
            "1" : "worm drive",
            "2" : "magneto optical drive",
            "3" : "tape drive",
            "4" : "dvd drive",
            "5" : "cdrom drive",
        },
        "avail" : {
            "0"  : (3, "unknown"),
            "1"  : (1, "other"),
            "2"  : (0, "running full power"),
            "3"  : (1, "warning"),
            "4"  : (1, "in test"),
            "5"  : (3, "not applicable"),
            "6"  : (1, "power off"),
            "7"  : (1, "off line"),
            "8"  : (1, "off duty"),
            "9"  : (1, "degraded"),
            "10" : (1, "not installed"),
            "11" : (2, "install error"),
            "12" : (3, "power save unknown"),
            "13" : (0, "power save low power mode"),
            "14" : (0, "power save standby"),
            "15" : (1, "power cycle"),
            "16" : (1, "power save warning"),
            "17" : (1, "paused"),
            "18" : (1, "not ready"),
        },
        "clean" : {
            "0" : "unknown",
            "1" : "true",
            "2" : "false",
        }
    }
    for ty, name, avail, clean in info:
        if item == ibm_tape_library_parse_device_name(name):
            state, state_readable = mappings["avail"][avail]
            infotext = "Status: %s, Type: %s, Needs cleaning: %s" % \
                (state_readable, mappings["type"][ty], mappings["clean"][clean])
            return state, infotext


check_info['ibm_tl_media_access_devices'] = {
    'inventory_function'    : inventory_ibm_tl_media_access_devices,
    'check_function'        : check_ibm_tl_media_access_devices,
    'service_description'   : 'Media access device %s',
    'snmp_info'             : ('.1.3.6.1.4.1.2.6.182.3.6.2.1', [
                                    "2",    # SML-MIB::mediaAccessDeviceObjectType
                                    "3",    # SML-MIB::mediaAccessDevice-Name
                                    "5",    # SML-MIB::mediaAccessDevice-Availability
                                    "6",    # SML-MIB::mediaAccessDevice-NeedsCleaning
                              ]),
    'snmp_scan_function'    : scan_ibm_tape_library,
    'includes'              : [ 'ibm_tape_library.include' ],
}
