# .1.3.6.1.4.1.31560.0.1.3.1.2.1.50 3            --> ARTEC-MIB::artecStorageIndex.1.50
# .1.3.6.1.4.1.31560.0.1.3.1.3.1.48 Free System  --> ARTEC-MIB::artecStorageName.1.48
# .1.3.6.1.4.1.31560.0.1.3.1.3.1.49 Free Storage --> ARTEC-MIB::artecStorageName.1.49
# .1.3.6.1.4.1.31560.0.1.3.1.3.1.50 Free Backup  --> ARTEC-MIB::artecStorageName.1.50

# TODO levels make sense

def inventory_artec_storage(info):
    return [ (None, None) ]


def check_artec_storage(_no_item, _no_params, info):
    for storage_name, storage_val_str in info:
        storage_name = storage_name.replace("Free", "").strip()
        if storage_val_str:
            yield 0, "%s: %s free" % (storage_name, get_bytes_human_readable(int(storage_val_str)))
        else:
            yield 0, "%s: no free space info" % storage_name


check_info['artec_storage'] = {
    'inventory_function'        : inventory_artec_storage,
    'check_function'            : check_artec_storage,
    'service_description'       : 'Storage SUMMARY',
#    'has_perfdata'              : True, # TODO define perf var and adapt man page
    'snmp_info'                 : (".1.3.6.1.4.1.31560.0.1.3.1", [
                                        "3",    # artecStorageName
                                        "1",    # artecStorageValue -> in Bytes
                                  ]),
    'snmp_scan_function'        : lambda oid: oid(".1.3.6.1.2.1.1.2.0") == ".1.3.6.1.4.1.8072.3.2.10",
}
