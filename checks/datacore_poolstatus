# <<<datacore_poolstatus>>>
# Disk_pool_1 Running ReadWrite Dynamic
# Disk_pool_1 Running ReadWrite Dynamic

def inventory_datacore_poolstatus(info):
   for poolname, poolstatus, poolmode, pooltype in info:
       yield poolname, None

def check_datacore_poolstatus(item, _no_params, info):
    for poolname, poolstatus, cachemode, pooltype  in info:
        if poolname == item:
            if poolstatus == "Running" and cachemode == "ReadWrite":
                return 0, "%s pool %s is running, its cache is in %s mode" % (pooltype, poolname, cachemode)
	    if poolstatus == "Running" and cachemode != "ReadWrite":
                return 1, "%s Pool %s is %s, its cache is %s" % (pooltype, poolname, poolstatus, cachemode)
            else:
                return 2, "%s pool %s is %s, its cache is in %s mode" % (pooltype, poolname, poolstatus, cachemode)

check_info['datacore_poolstatus'] = {
    "check_function"          : check_datacore_poolstatus,
    "inventory_function"      : inventory_datacore_poolstatus,
    "service_description"     : "DataCore Disk Pool %s",
}
