def inventory_cisco_locif(checkname, info):
   # line[0] => like "GigabitEthernet1/17"
   # line[4] => description
   return [ (line[0], line[4], '""') for line in info if line[1] == '1' ]

def check_cisco_locif(item, params, info):
   for line in info:
      if line[0] == item:
         input_rate = int(line[2])
         output_rate = int(line[3])
         perfdata = [ ("input_rate", input_rate),
                      ("output_rate", output_rate) ]
         if line[1] == '1':
            return(0, "OK - %s" % line[4], perfdata)
         else:
            return(2, "CRIT - %s has no link" % line[4], perfdata)
         
   return (3, 'UNKNOWN - Port %s ("%s") not found in SNMP data' % (item, line[4]))

check_info['cisco_locif'] = (check_cisco_locif, "Port %s", 1,  inventory_cisco_locif)
snmp_info['cisco_locif'] = ( "enterprises.9",
                             [ "9.23.1.1.1.1.6",
                               "2.2.1.1.2",
                               "2.2.1.1.6",
                               "2.2.1.1.8",
                               "2.2.1.1.28"] ) # OLD-CISCO-INTERFACES-MIB
