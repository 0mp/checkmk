def inventory_cisco_temp(checkname, info):
   # itemname  temp  max(crit?)  status(1=ok)
   return [ (line[0], "act %s, max %s" % (line[1], line[2]), '""') for line in info ]

def check_cisco_temp(item, params, info):
   for line in info:
      if line[0] == item:
         temp = int(line[1])
         perfdata = [("temp", temp)]
         if line[3] == "1":
            return (0, "OK - %s degrees" % temp, perfdata)
         else:
            return (2, "CRIT - %d degrees (max is %s)" % (temp, line[2]), perfdata)
   return (3, "UNKNOWN - Item %s not found in SNMP data" % item)

check_info['cisco_temp'] = (check_cisco_temp, "%s", 1,  inventory_cisco_temp)
snmp_info['cisco_temp'] = ( "enterprises.9.9.13.1.3.1", [ 2, 3, 4, 6 ] ) # CISCO-SMI
