# .1.3.6.1.4.1.28507.**.1.3.1.2.1.2.1 TWTA 2 --> GUDEADS-EPC****-MIB::epc****PortName.1
# .1.3.6.1.4.1.28507.**.1.3.1.2.1.3.1 0 --> GUDEADS-EPC****-MIB::epc****PortState.1
# .1.3.6.1.4.1.28507.**.1.5.1.2.1.4.1 0 --> GUDEADS-EPC****-MIB::epc****PowerActive.1
# .1.3.6.1.4.1.28507.**.1.5.1.2.1.5.1 0 --> GUDEADS-EPC****-MIB::epc****Current.1
# .1.3.6.1.4.1.28507.**.1.5.1.2.1.6.1 228 --> GUDEADS-EPC****-MIB::epc****Voltage.1
# .1.3.6.1.4.1.28507.**.1.5.1.2.1.7.1 4995 --> GUDEADS-EPC****-MIB::epc****Frequency.1
# .1.3.6.1.4.1.28507.**.1.5.1.2.1.10.1 0 --> GUDEADS-EPC****-MIB::epc****PowerApparent.1


factory_settings["gude_relayport_default_levels"] = {
    "voltage" : (  220,  210 ),
    "current" : (   15,   16 ),
    "energy"  : ( 3500, 3600 ),
}


def parse_gude_relayport(info):
    parsed = {}
    for idx, (oid_portname, portstate, active_power_str, current_str, \
        volt_str, freq_str, appower_str) in enumerate(info):

        if oid_portname:
            portname = oid_portname.split(".")[-1]
        else:
            portname = idx+1

        parsed.setdefault(portname, {})

        if portstate:
            parsed[portname]["device_state"] = { "0" : (2, "off"), "1" : (0, "on") }[portstate]

        for what, key, factor in [
            (active_power_str, "power",     1.0),
            (current_str,      "current",   0.001),
            (volt_str,         "voltage",   1.0),
            (freq_str,         "frequency", 0.01),
            (appower_str,      "appower",   1.0),]:
            try:
                parsed[portname][key] = float(what) * factor
            except:
                continue

    return parsed


check_info['gude_relayport'] = {
    'parse_function'          : parse_gude_relayport,
    'inventory_function'      : inventory_elphase,
    'check_function'          : check_elphase,
    'service_description'     : 'Relay port %s',
    'has_perfdata'            : True,
    'snmp_info'               : ('.1.3.6.1.4.1.28507', [ "19", "38" ], [
                                      "1.3.1.2.1.2",  # GUDEADS-EPC****-MIB::epc****PortName
                                      "1.3.1.2.1.3",  # GUDEADS-EPC****-MIB::epc****PortState
                                      "1.5.1.2.1.4",  # GUDEADS-EPC****-MIB::epc****PowerActive.1
                                      "1.5.1.2.1.5",  # GUDEADS-EPC****-MIB::epc****Current.1
                                      "1.5.1.2.1.6",  # GUDEADS-EPC****-MIB::epc****Voltage.1
                                      "1.5.1.2.1.7",  # GUDEADS-EPC****-MIB::epc****Frequency.1
                                      "1.5.1.2.1.10", # GUDEADS-EPC****-MIB::epc****PowerApparent.1
                                ]),
    'snmp_scan_function'      : lambda oid: oid(".1.3.6.1.2.1.1.2.0").startswith(".1.3.6.1.4.1.28507.19") or \
                                            oid(".1.3.6.1.2.1.1.2.0").startswith(".1.3.6.1.4.1.28507.38"),
    'default_levels_variable' : 'gude_relayport_default_levels',
    'group'                   : 'el_inphase',
    'includes'                : [ 'elphase.include' ],
}
