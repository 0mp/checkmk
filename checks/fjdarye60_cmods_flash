fjdarye60_hwstatus = { 1: 'normal',  2: 'alarm',       3: 'warning',
                       4: 'invalid', 5: 'maintenance', 6: 'undefined' }

def inventory_fjdarye60(info):
    return [ (int(index), '', None) for index, status in info if int(status) != 4 ]


def check_fjdarye60(index, _no_param, info):
    for line in info:
        if int(line[0]) == index:
            status = int(line[1])

            if status == 1:
                code = 0
            elif status == 3:
                code = 1
            else:
                code = 2

            return (code, '%s - Status is %s' % (nagios_state_names[code], fjdarye60_hwstatus[status]))

    return (3, "UNKNOWN - No status for item %d present" % index)

check_info['fjdarye60_cmods_flash'] = (check_fjdarye60, "Channel Module Flash %s", 0,  inventory_fjdarye60)
# 1: fjdaryCmflashIndex, 3: fjdaryCmflashStatus
snmp_info['fjdarye60_cmods_flash'] = (".1.3.6.1.4.1.211.1.21.1.60.2.4.2.1", [ 1, 3 ])

snmp_scan_functions['fjdarye60_cmods_flash'] \
        = lambda oid: oid(".1.3.6.1.2.1.1.2.0") == ".1.3.6.1.4.1.211.1.21.1.60"
