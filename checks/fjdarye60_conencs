fjdarye60_conencs_status = { 1: 'normal',  2: 'alarm',       3: 'warning',
                            4: 'invalid', 5: 'maintenance', 6: 'undefined' }

def inventory_fjdarye60_conencs(checkname, info):
    return [ (int(index), '', 1) for index, status in info if int(status) != 4 ]


def check_fjdarye60_conencs(index, expected_status, info):
    for line in info:
        if int(line[0]) == index:
            status = int(line[1])

            if status == expected_status:
                return (0, "OK - Status is %s" % fjdarye60_conencs_status[status])
            elif status == 3:
                return (1, "WARN - Status is %s (Expected status is %s)" % (fjdarye60_conencs_status[status],
                                                                          fjdarye60_conencs_status[expected_status]))
            else:
                return (2, "CRIT - Status is %s (Expected status is %s)" % (fjdarye60_conencs_status[status],
                                                                          fjdarye60_conencs_status[expected_status]))

    return (3, "UNKNOWN - No status for controller enclosure %d present" % index)

check_info['fjdarye60_conencs'] = (check_fjdarye60_conencs, "Controller Enclosure %s", 0,  inventory_fjdarye60_conencs)
# 1: fjdaryCeIndex, 3: fjdaryCeStatus
snmp_info['fjdarye60_conencs'] = (".1.3.6.1.4.1.211.1.21.1.60.2.6.2.1", [ 1, 3 ])

