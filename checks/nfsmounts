def inventory_nfsmounts(checkname, info):
    return [ (line[0], None, None) for line in info ]

def check_nfsmounts(item, params, info):
    for line in info:
        mountpoint = line[0]
        if mountpoint == item:
            size_blocks = int(line[2])
            free_blocks = int(line[4]) # for non-root user
            blocksize = int(line[5])
            
            if size_blocks < 0 or free_blocks < 0 or blocksize > 1024*1024:
                return (1, "WARNING - Stale NFS handle")
            
            gb = 1024 * 1024 * 1024.0
            size_gb = (size_blocks * blocksize) / gb
            used_gb = (free_blocks * blocksize) / gb
            if line[1] == 'ok':
                return (0, "OK - server responding (%.2f GB / %.2f GB used)" % (used_gb, size_gb))
            else:
                return (2, "CRITICAL - server not responding")
    return (3, "UNKNOWN - not mounted")
    
check_info['nfsmounts'] = (check_nfsmounts, "NFS mount %s", 0, inventory_nfsmounts)
